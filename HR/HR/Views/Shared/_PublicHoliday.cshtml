@model HR.Models.PublicHolidayPolicyViewModel
@{
    Layout = null;
}
@Html.AntiForgeryToken()
@Html.HiddenFor(model => Model.PublicHoliday.PublicHolidayId, new { ng_model = "model.publicHolidayId"})
<div class="form-group" id="publicHolidayErrorSummary" hidden>
    <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
            <div class="validation-summary-errors row alert alert-error" data-valmsg-summary="false">
                <ul class="errors">
                    <li ng-repeat="error in model.Errors"><span ng-bind="error"></span></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        @Html.LabelFor(model => model.PublicHoliday.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.PublicHoliday.Name, new { @class = "form-control col-md-7 col-xs-12", ng_model = "model.name" })
            @Html.ValidationMessageFor(model => model.PublicHoliday.Name, "", new { @class = "help-block" })
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        @Html.LabelFor(model => model.PublicHoliday.Date, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.PublicHoliday.Date, "{0:DD MMMM YYYY}", new { @class = "form-control col-md-7 col-xs-12 date", ng_model = "model.date" })
            @Html.ValidationMessageFor(model => model.PublicHoliday.Date, "", new { @class = "help-block" })
        </div>
    </div>
</div>
