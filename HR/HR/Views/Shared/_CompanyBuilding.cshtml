@using Microsoft.Ajax.Utilities

<div class="dropdown" id="CompanyBuilding">
    <button class="btn btn-default btn-md dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="fa fa-building fa-fw"></span>
       
        <span ng-model="buildingName" ng-bind="model.siteBuildingDefault.Name"></span>
        <span class="caret"></span>
    </button>

    <div class="dropdown-menu divisionbuilding" role="menu" aria-labelledby="dropdownMenu1">
        <table class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-top: 0!important; margin-bottom: 0 !important; ">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Building</th>
                </tr>
            </thead>
            <tbody ng-repeat="siteBuilding in model.ddSiteBuilding">
            <tr ng-click="model.SetCompanyBuilding(siteBuilding) ">
                <td><span ng-bind="siteBuilding.Site.Name"></span></td>
                <td><span ng-bind="siteBuilding.Name"></span></td>


            </tr>
            </tbody>
        </table>
    </div>
    <button style="pointer-events:initial;" type="button" ng-disabled="model.assigning" class="btn btn-success" ng-click="model.assignCompanyBuilding();">Assign</button>
</div>
